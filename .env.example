# AutoCare360 Environment Configuration
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file - it contains sensitive data

# ===========================================
# MYSQL DATABASE CONFIGURATION
# ===========================================
MYSQL_ROOT_PASSWORD=your_mysql_root_password_here
MYSQL_DATABASE=autocare360
MYSQL_USER=autocare
MYSQL_PASSWORD=your_mysql_password_here

# ===========================================
# BACKEND (SPRING BOOT) CONFIGURATION
# ===========================================
# Database URL
DB_URL=jdbc:mysql://mysql-service:3306/autocare360

# JWT Secret (minimum 256 bits)
JWT_SECRET=Your=Jwt=Secret=Key=Here=Minimum=256=Bits=Long

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Server Configuration
SERVER_PORT=8080

# Spring Profiles (dev/prod)
SPRING_PROFILES_ACTIVE=dev

# Logging
LOGGING_LEVEL_COM_AUTOCARE360=DEBUG
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_SECURITY=DEBUG

# Actuator
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when-authorized

# ===========================================
# FRONTEND (NEXT.JS) CONFIGURATION
# ===========================================
# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_CHATBOT_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8080/ws

# Application Configuration
NEXT_PUBLIC_APP_NAME=AutoCare360
NEXT_PUBLIC_APP_VERSION=1.0.0

# Feature Flags
NEXT_PUBLIC_ENABLE_CHATBOT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ===========================================
# CHATBOT (FASTAPI/PYTHON) CONFIGURATION
# ===========================================
# Environment Configuration
ENV=dev

# AI Provider Configuration (openai, gemini, grok, mock)
AI_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=500

# Google Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash

# Grok (xAI) Configuration
GROK_API_KEY=your_grok_api_key_here
GROK_MODEL=grok-beta

# MySQL Configuration (uses same as above)
MYSQL_HOST=mysql-service

# Redis Configuration
REDIS_URL=redis://redis-service:6379
REDIS_HOST=redis-service
REDIS_PORT=6379

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO

# ===========================================
# PRODUCTION OVERRIDES
# ===========================================
# For production deployment, change these values:
# - Use strong, unique passwords (16+ characters)
# - Generate secure JWT secret (256+ bits)
# - Update URLs to production domains
# - Set SPRING_PROFILES_ACTIVE=prod
# - Set ENV=prod
# - Set DEBUG=false
# - Set LOG_LEVEL=INFO
# - Update CORS_ALLOWED_ORIGINS to production domains
